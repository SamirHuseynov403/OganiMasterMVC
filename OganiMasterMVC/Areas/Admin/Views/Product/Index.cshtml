@model List<Product>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="border:1px solid #ccc;">
                <h4 class="card-title">Products</h4>
                <a class="btn btn-primary" asp-controller="Product" asp-action="create">Add</a>
                <div class="table-responsive pt-3" style="border:1px solid #ccc;">
                    <table class="table table-bordered" style="border:1px solid #ccc;">
                        <thead>
                            <tr>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    #
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Product
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Image
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Price
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Description
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    DiscountPercent
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Category
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Id
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Name
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.ImageUrl
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Price
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Description
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.DiscountPercent
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Category?.Name
                                    </td>
                                    <td style="border:1px solid #ccc;">
                                        <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>

                                        <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>

                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>