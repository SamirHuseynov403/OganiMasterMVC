@* @model List<Product> *@
    @model ProductViewModel
@{
    // ProductViewModel model = Model;
    
    // var listProduct = model.Products;
    // var listTags= model.Tags;
}
<style>
    .button {
        background-color: red; /* Green */
        border: none;
        color: white;
        padding: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
    }


    .button5 {
        border-radius: 50%;
    }
</style>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="border:1px solid #ccc;">
                <h4 class="card-title">Products</h4>
                <a class="btn btn-primary" asp-controller="Product" asp-action="create">Add</a>
                <div class="table-responsive pt-3" style="border:1px solid #ccc;">
                    <table class="table table-striped align-middle mb-0" style="min-width:1200px">
                        <thead>
                            <tr>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    #
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Product
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Image
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Price
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Description
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    DiscountPercent
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Category
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Tags
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Images
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @{
                                int count = 1;
                            }

                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @count
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Name
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        <img src="~/Admin/images/product/@item.ImageUrl" alt="@item.Name"
                                             style="width:80px;height:80px;object-fit:cover;border-radius:6px;"
                                             loading="lazy" asp-append-version="true" />
                                    </td>

                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Price
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Description
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.DiscountPercent
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Category?.Name
                                    </td>
                                    <td class="align-middle" style="border:1px solid #ccc;">
                                        <div class="d-flex flex-column gap-2">
                                            @foreach (var t in item.ProductTags)
                                            {
                                                <div class="d-flex align-items-center justify-content-between mb-2">
                                                    <span>@t.Tag!.Name</span>

                                                    <form asp-action="RemoveTag" asp-controller="Product" method="post" class="ms-2">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="productId" value="@item.Id" />
                                                        <input type="hidden" name="tagId" value="@t.TagId" />
                                                        <button type="submit" class="button button5" title="Məhsuldan çıxar">
                                                            ×
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                            <br>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary rounded-pill"
                                                    data-bs-toggle="modal" data-bs-target="#tagsModal-@item.Id">
                                                + Add tag
                                            </button>
                                        </div>


                                        <!-- Modal (hər məhsul üçün) -->
                                        <div class="modal fade" id="tagsModal-@item.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <form asp-controller="Product" asp-action="UpsertTags" method="post">
                                                    <input type="hidden" name="ProductId" value="@item.Id" />
                                                   
                                                    
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Manage tags for "@item.Name"</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>

                                                        <div class="modal-body">
                                                            <!-- Bura scroll olacaq -->
                                                            <div style="max-height: 250px; overflow-y: auto;">
                                                                @foreach (var tag in item.ProductTags)
                                                                {
                                                                    var isChecked = item.ProductTags.Any(x => x.TagId == tag.Id);
                                                                    <div class="form-check">
                                                                        <input class="form-check-input"
                                                                               type="checkbox"
                                                                               name="tagIds"
                                                                               value="@tag.Id"
                                                                               id="tag_@item.Id _@tag.Id"
                                                                        @(isChecked ? "checked" : "") />
                                                                        <label class="form-check-label" for="tag_@item.Id _@tag.Id">
                                                                            @tag.Tag?.Name
                                                                        </label>
                                                                    </div>
                                                                }
                                                            </div>


                                                            <div class="mt-3">
                                                                <label class="form-label">Create new tag (optional)</label>
                                                                <input name="newTagName" class="form-control" placeholder="Yeni tag adı..." />
                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Close</button>

                                                            <button type="submit" class="btn btn-primary">Save</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                    </td>
                                    <td class="align-middle" style="border:1px solid #ccc;">
                                        <div class="d-flex flex-column gap-2">
                                            @foreach (var t in item.ProductImages)
                                            {
                                                <div class="d-flex align-items-center justify-content-between mb-2">

                                                    <img src="~/Admin/images/product/@t.ImageUrl" alt="@item.Name"
                                                         style="width:80px;height:80px;object-fit:cover;border-radius:6px;"
                                                         loading="lazy" asp-append-version="true" />

                                                    <form asp-action="RemoveImage" asp-controller="Product" method="post" enctype="multipart/form-data" class="ms-2">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="productId" value="@item.Id" />
                                                        <input type="hidden" name="imageId" value="@t.Id" />
                                                        <button type="submit" class="button button5" title="Məhsuldan çıxar">
                                                            ×
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                            <br>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary rounded-pill"
                                                    data-bs-toggle="modal" data-bs-target="#imagesModal-@item.Id">
                                                + Add image
                                            </button>
                                        </div>


                                        <!-- Modal (hər məhsul üçün) -->
                                        <div class="modal fade" id="imagesModal-@item.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <form asp-controller="Product" asp-action="UpsertImages" method="post" enctype="multipart/form-data">
                                                    <input type="hidden" name="ProductId" value="@item.Id" />


                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Manage tags for "@item.Name"</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>

                                                        <div class="modal-body">
                                                            <!-- Bura scroll olacaq -->
                                                            <div style="max-height: 250px; overflow-y: auto;">
                                                                @foreach (var image in item.ProductImages)
                                                                {
                                                                    var isChecked = item.ProductImages.Any(x => x.Id == image.Id);
                                                                    <div class="form-check">
                                                                        <input class="form-check-input"
                                                                               type="checkbox"
                                                                               name="tagIds"
                                                                               value="@image.Id"
                                                                               id="tag_@item.Id _@image.Id"
                                                                        @(isChecked ? "checked" : "") />
                                                                        <img src="~/Admin/images/product/@image.ImageUrl" alt="@item.Name"
                                                                             style="width:80px;height:80px;object-fit:cover;border-radius:6px;"
                                                                             loading="lazy" asp-append-version="true" />
                                                                    </div>
                                                                }
                                                            </div>
                                                            
                                                            <div class="mt-3">
                                                                <label class="form-label">Create new image (optional)</label>
                                                                <input asp-for="ImageFile" type="file" class="form-control" />
                                                                <span asp-validation-for="ImageFile"></span>
                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Close</button>

                                                            <button type="submit" class="btn btn-primary">Save</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                    </td>

                                    <td style="border:1px solid #ccc;">
                                        <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>

                                        <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>

                                    </td>

                                </tr>

                                count++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>